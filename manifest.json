{
  "manifest_version": 3,
  "name": "ViralMind Auto Connect",
  "description": "Envie conex√µes personalizadas no LinkedIn de forma automatizada.",
  "version": "3.1",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "scripting",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon32.png"
  },

  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/search/results/*",
        "https://www.linkedin.com/sales/search/*"
      ],
      "js": [
        "content.js",
        "content_connect_only.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://www.linkedin.com/in/*"
      ],
      "js": [
        "content.js",
        "content_send_with_note.js"
      ],
      "run_at": "document_start"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "content_collect_compose_links.js",
        "content_compose_action.js",
        "content_connect_only.js",
        "content_send_with_note.js",
        "content.js"
      ],
      "matches": ["https://www.linkedin.com/*"]
    }
  ]
}
